{
  "root": true,
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true,
    "jest": true // Add Jest globals
  },
  "plugins": ["jest"], // Add Jest plugin 
  "extends": [
    "eslint:recommended",
    "plugin:jest/recommended" // Use recommended Jest rules
  ],
  "rules": {
    "no-unused-vars": ["error"],
    "no-use-before-define": ["error"],
    "no-redeclare": ["error"],
    "camelcase": ["off"]
  }
}
